<h1>Tach'board</h1>

<h3>Mes tâches de la semaine</h3>

    <% @user_tasks.each do |task| %>
        <%= task.image %>
        <%= task.final_points %>
    <% end %>

<h3>Tâches non assignées</h3>

    <% @unassigned_tasks.each do |task| %>
        <%= task.image %>
        <%= task.final_points %>
    <% end %>

<h3>Les tâches de mes colocs</h3>

    <% @colocs_tasks.each do |task| %>
        <%= task.image %>
        <%= task.user.avatar %>
    <% end %>
