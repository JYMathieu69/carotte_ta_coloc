<%= form_with model: @coloc do |form| %>
  <h2 class="text-center mb-8 font-medium text-xl lg:text-2xl">Choisis les tâches de ta Coloc'</h2>
  <ul class="choose_task_grid mx-4 mb-32 lg:mb-40">
    <%= form.fields_for :coloc_tasks do |coloc_tasks_fields| %>
      <li class="switch-task h-44">
        <div class="flex flex-col justify-start items-center h-44 lg:justify-start lg:mb-4">
          <div>
            <%= cl_image_tag coloc_tasks_fields.object.task.image.key, class:"w-12 h-12 mb-4 lg:mb-2 lg:w-16 lg:h-16" %>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3 class="text-xs text-secondary-200 font-medium mb-4 lg:mb-2 lg:text-base lg:mt-4"> <%= coloc_tasks_fields.label coloc_tasks_fields.object.task.name %> </h3>
            <label class="switch">
              <%= coloc_tasks_fields.check_box  :task_id, { checked: false } , coloc_tasks_fields.object.task.id %>
              <span class="slider round"></span>
            </label>
            <%= coloc_tasks_fields.hidden_field :difficulty  %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="validate_tasks">
    <%= form.submit 'Je valide mes tâches', class: 'btn-primary' %>
  </div>
<% end %>
