<%= link_to "Revenir au Tach'board" , ongoing_tasks_path, class: "btn-border-purple ml-8 lg:ml-16" %>

<h1 class="primary-title text-center mt-8 lg:mt-2">Gestion de la coloc</h1>

<div class="flex flex-wrap justify-around mt-8 mx-4 overflow-x-hidden">
  <div>
    <div class='text-center card-infos'>
      <h2 class="secondary-title">Change le nom de la coloc'</h2>
      <%= simple_form_for @coloc do |f| %>
        <%= f.input :name, label: false%>
        <%= f.submit "Sauvegarder", class: "btn-border-primary mt-4" %>
      <% end %>
    </div>
    
    <div class="text-center card-infos mt-4 overflow-x-hidden">
      <h2 class="secondary-title">Inviter un coloc'</h2>
      <p class="mt-4 leading-7">Pour qu'un utilisateur rejoigne ta coloc, envoie-lui ce code :</p>
      <p class="text-xl font-medium underline mt-2 "><%= @coloc.invite_token %></p>
    </div>

    <div class="card-infos text-center mt-4 overflow-x-hidden mb-4">
      <h2 class="secondary-title">Gestions des colocataires</h2>
      <ul>
        <% @users.each do |user| %>
          <li>
            <div class="flex justify-around mb-4 items-center">
              <div class="mr-4">
                <%= cl_image_tag user.avatar.key, class:"rounded-full h-16 w-16 lg:h-20 lg:w-20" %>
              </div>
              <div class="flex">
                <p class="font-medium mr-4"><%= user.username %></p>
                <p>
                  <% if user !=@coloc.leader %>
                    <%= link_to "X" , remove_coloc_user_path(@coloc, user), method: :delete, data: {
                      confirm: "Retirer #{user.username} de la coloc ?" } %>
                      <% end %> 
                </p>
              </div>
            </div>
          </li>
          <% end %>
      </ul>
    </div>
  </div>

  <div class="card-infos justify-around lg:w-1/2">
    <h2 class='secondary-title text-center'>Changer la difficult√© des t√¢ches</h2>
    <div class="flex flex-wrap items-center justify-center">
      <div class="mr-4">
        <p>1 : 15 carottes</p>
        <p>2 : 30 carottes</p>
      </div> 
      <div>
        <p>3 : 45 carottes</p>
        <p>4 : 60 carottes</p>
      </div>
    </div>

    <div class="dashed"></div>

    <%= form_with model: @coloc do |form| %>
      <ul class="change_difficulty_grid">
        <%= form.fields_for :coloc_tasks, form.object.coloc_tasks.order(:id) do |coloc_tasks_fields| %>
          <li class="flex flex-col justify-between items-center h-44 mb-4 lg:justify-start lg:h-36 lg:mb-4">
              <div>
                <%= cl_image_tag coloc_tasks_fields.object.task.image.key, class:"h-16 w-16 lg:h-20 lg:w-20"%>
              </div>
              <div>
                <p class="text-sm mt-1 text-center lg:text-base lg:mt-4 lg:mb-2"><%= coloc_tasks_fields.label coloc_tasks_fields.object.task.name %></p>
              </div>
              <div>
                <label>
                  <%= coloc_tasks_fields.select :difficulty, Task::DIFFICULTIES %>
                </label>
                <%= link_to "üóëÔ∏è", coloc_coloc_task_path(@coloc, coloc_tasks_fields.object), method: :delete, data: { confirm: "Retirer '#{coloc_tasks_fields.object.task.name}' de la coloc ? Tout l'historique sera d√©finitivement supprim√©." } %>
                <%= coloc_tasks_fields.hidden_field :task_id  %>
              </div>
        <% end %>
      </ul>
      <div class="text-center mt-8">
        <%= form.submit 'Sauvegarder', class: 'btn-primary mx-auto' %>
      </div>
    <% end %>
  </div>
</div>

<div class="dashed"></div>

<h2 class="secondary-title text-center">Ajouter des t√¢ches √† la coloc</h2>

<%= simple_form_for [@coloc, @new_coloc_task] do |form| %>
  <div class="change_difficulty_grid mx-4">
    <% @addable_tasks.each do |addable_task| %>
      <%= fields_for "items[]", addable_task do |f| %>
        <div class="addable-switch-task filter grayscale">
          <div>
            <%= cl_image_tag f.object.image.key, class:"w-12 h-12 lg:h-16 lg:w-16 mb-2" %>
          </div>
          <div class="toggle-name">
            <p class="text-secondary-200 mb-2 text-xs text-center lg:text-base"> <%= f.label f.object.name %> </p>
            <label class="switch mx-auto">
              <%= f.check_box  :task, { checked: false }, f.object.id %>
              <span class="slider round"></span>
            </label>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="text-center mt-6">
    <%= form.submit 'Ajouter les t√¢ches s√©lectionn√©es', class: 'btn-primary mb-8' %>
  </div>
<% end %>
