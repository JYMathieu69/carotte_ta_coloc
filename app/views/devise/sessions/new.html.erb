<div class="text-center mb-4">
  <p>Pas encore de compte ?</p>
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: 'violet-100' %>
</div>

<div class="log-in-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input-form-border-purple placeholder" },
                label: false,
                placeholder: 'Entre ton adresse mail' %>

    <%= f.input :password,
                input_html: { autocomplete: "current-password", class: "input-form-border-purple placeholder" },
                label: false,
                placeholder: 'Entre ton mot de passe' %>
  
    <%= f.input :remember_me,
                as: :boolean,
                label: "Se souvenir de moi",
                input_html: { class: "mb-4" } if devise_mapping.rememberable? %>
  
    <%= f.submit "Je me connecte", class: 'btn-primary' %>
  <% end %>

